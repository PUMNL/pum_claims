        'return' => 'contact_id'
    ));
    $contact = civicrm_api3('Contact', 'getsingle', array('id' => $contact_id));

    _pum_claims_updateBankDetailsOfContact($contact_id, $form_state['values']['bank_name'], $form_state['values']['iban'], $form_state['values']['bic']);

