function pum_claims_views_default_views() {
    $files = file_scan_directory(drupal_get_path('module', 'pum_claims'). '/views', '/.inc/');
    $views = array();
    civicrm_initialize();
    foreach ($files as $filepath => $file) {
        require $filepath;
        if (isset($view)) {
            $views[$view->name] = $view;
        }
    }
    return $views;
}

function _pum_claims_view_edit_claim_link($claim_id) {
    if (pum_claims_is_claim_editable($claim_id)) {
        $url = url('portal/edit-claim/'.$claim_id, array('absolute' => true));
        echo '<a href="'.$url.'">Edit</a>';
    } else {
        $url = url('portal/view-claim/'.$claim_id, array('absolute' => true));
        echo '<a href="'.$url.'">View</a>';
    }
}

function pum_claims_is_claim_editable($claim_id) {
    civicrm_initialize();
    $sqlParams[1] = array($claim_id, 'Integer');
    $countProcessed = CRM_Core_DAO::singleValueQuery("SELECT COUNT(*) FROM pum_claim_log WHERE claim_activity_id = %1 AND processed_date IS NOT NULL", $sqlParams);
    if ($countProcessed) {
        return false;
    }
    $count = CRM_Core_DAO::singleValueQuery("SELECT COUNT(*) FROM pum_claim_log WHERE claim_activity_id = %1 AND processed_date IS NULL", $sqlParams);
    if ($count) {
        return true;
    }
    return false;
}

function pum_claims_convert_currency() {
    $currency_id = (int) $_GET['currency_id'];
    $amount = (float) $_GET['amount'];
    civicrm_initialize();
    $result = civicrm_api3('Currency', 'Convert', array('currency_id' => $currency_id, 'amount' => $amount));
    echo number_format($result['euro_amount'], 2, ',', '.');
    exit();
}

